<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rv_item_book_main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/rv_item_book_lin_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/rv_item_book_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/rv_item_book_default_text"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rv_item_book_tv_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/rv_item_book_default_text"
            android:textColor="@color/cardview_dark_background"
            android:textSize="20sp" />
    </LinearLayout>

    <RatingBar
        android:id="@+id/rv_item_book_rating_bar"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_item_book_lin_layout" />
</androidx.constraintlayout.widget.ConstraintLayout>